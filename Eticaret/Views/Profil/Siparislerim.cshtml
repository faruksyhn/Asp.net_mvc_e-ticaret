@model IEnumerable<Eticaret.Entities.Siparis>
@{
    ViewBag.Title = "Siparislerim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-md-12">
        <h2>Siparişlerim</h2>
        <hr/>
        <table class="table table-bordered table-striped">
            <thead>
            <tr>
                <th>
                    Sipariş Numarasi
                </th>
                <th>Tarih</th>
                <th>Toplam Tutar</th>
                <th>#</th>
            </tr>
            </thead>

            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.SiparisNumarasi
                    </td>
                    <td>@item.SiparisTarihi</td>
                    <td>
                        @item.ToplamTutar
                    </td>
                    <td>
                        @Html.ActionLink("Detay", "SiparisDetay", new { id = @item.SiparisId }, new { @class = "btn btn-primary btn-sm" })

                    </td>
                </tr>
            }
           
            </tbody>
        </table>
    </div>
</div>

